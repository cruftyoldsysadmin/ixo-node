{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": [
      // add node as an option
      "node",
      "express"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ], 
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
 }